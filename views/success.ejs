        margin-bottom:5px;
        font-size: 300%;
        letter-spacing: 0;
        color: #000000;
        font-family: "Trebuchet MS", Helvetica, sans-serif;
    }

    input[type=button] {
        display: block;
        margin: 15px 0;
        padding:15px 36px;
        color:rgba(50, 50, 50, 0.85);
        background:transparent;
        border: 2px solid #e70028;
        cursor: pointer;
        -webkit-border-radius: 5px;
        border-radius: 5px;
    }

    input[type=button]:hover {
        transform: scale(1.2);
        color: #e70028;
        font-size: 100%;
    }

</style>

