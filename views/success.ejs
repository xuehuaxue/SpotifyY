<!-- views/welcome.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Lets rock!</title>
</head>
<body>

<main>


    <div class='playlist' style="margin-left: 30px">
        <h1 class="logo">
            <span class="word1">Lets</span>
            <span class="word2">rock</span>
        </h1>
        <%if (link != '') { %>
        <iframe width="720" height="405" src=<%=link%> allowfullscreen></iframe>
        <% } %>

    <input type="button" onclick="location.href='http://localhost:8080';" value="Lets convert more" />
    </div>

</main>

<style>
    body{
        background: #282828;
    }

    .logo {
        font: 54px 'Arial Narrow', sans-serif;
        color: #fefefe;
        text-transform: uppercase;
        letter-spacing: -4px;
    }

    /* stuff for both words */
    .logo span {
        position: relative;
    }

    .logo span:before,
    .logo span:after {
        content: '';
        position: absolute;
        border-width: 22px; /* makes a nice, big 64px square */
        border-style: solid;
        border-color: transparent;
        height: 0;
        z-index: 10;
    }

    /* stuff for 1st word */
    .logo .word1 {
        color: #dc006c;
        margin-right: -12px;
        display: inline-block; /* required for transform */
        z-index: 10; /* stack 1st word on top */
    }

    .logo .word1:before {
        left: -4px;
        top: -10px;
        border-top-color: #282828; /* match background color */
        border-left-color: #282828;
    }

    .logo .word1:after {
        right: 17px;
        bottom: -15px;
        border-bottom-color: #282828;
        border-right-color: #282828; /* would be right, but we flipped the word */
    }

    /* stuff for 2nd word */
    .logo .word2 {
        z-index: 0; /* stack 2nd word below */
    }

    .logo .word2:before {
        left: -4px;
        top: -6px;
        border-top-color: #282828;
        border-left-color: #282828;
    }

    .logo .word2:after {
        right: -15px;
        bottom: 2px;
        border-bottom-color: #282828;
        border-right-color: #282828;
    }


    input[type=button] {
        display: block;
        margin: 25px 0;
        padding: 15px 36px;
        font-size: 15px;
        background: transparent;
        cursor: pointer;
        border: 2px solid #dc006c;
        border-radius: 5px;
        color: #fefefe;

    }

    input[type=button]:hover {
        border: 2px solid #dc006c;
        border-radius: 5px;
        color: #dc006c;
    }

</style>

<footer>

</footer>

</body>
</html>
