<!-- views/playlist.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <title>view playlist</title>
</head>
<body>

<main>


    <div class='playlist' style="padding-left: 30px;">
        <h1>Hi <%= username%>, select one of your favorite playlist!</h1>

        <form action="/get_tracks" method="POST">
            <% playlist.forEach(function(list) { %>
            <input type="radio" checked="checked" value=<%= list.name %> name="list"> <label><%= list.name %></label> <br><br>
            <% }); %>

            <input type="text" placeholder="New name for playlist(optional)" name="title"/><br>
            <input type="text" placeholder="Description(optional)" name="description"/>


            <input type="submit" value="Ready To Go"/>
        </form>

    </div>
</main>

<style>
    body{
        background: rgba(229, 165, 173, 0.28);
    }

    h1{
        margin-top: 30px;
        margin-bottom: 25px;
        font-size: 250%;
        letter-spacing: 0;
        color: #000000;
        font-family: "Trebuchet MS", Helvetica, sans-serif;
    }
    input[type=submit] {
        display: block;
        margin: 15px 0;
        padding:15px 36px;
        color:rgba(50, 50, 50, 0.85);
        background:transparent;
        border: 2px solid #e70028;;
        cursor: pointer;
        -webkit-border-radius: 5px;
        border-radius: 5px;
    }

    input[type=submit]:hover {
        transform: scale(1.2);
        color: rgba(50, 50, 50, 0.85);
        font-size: 100%;
    }


    label {
        color: black;
    }

    label:hover {
        font-size: 120%;
        color:#e70028;
    }

    input[type=text], select {
        height: 30px;
        width: 300px;
        border: 1px solid rgba(50, 50, 50, 0.85);
        margin-top: 5px;
        display: inline-block;
    }


</style>

<footer>

</footer>

</body>
</html>
