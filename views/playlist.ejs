<!-- views/playlist.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <title>view playlist</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<main>


    <div class='playlist'>
        <h1><span style="color:#fefefe">Hi <%= username %>,</span> select one of your favorite playlist!</h1>

        <form action="/get_tracks" method="POST">
            <% playlist.forEach(function(list) { %>
            <input type="radio" checked="checked" value=<%= list.name %> name="list"> <label><%= list.name %></label>
            <br><br>
            <% }); %>

            <input type="text" placeholder="New name for playlist(optional)" name="title"/><br>
            <input type="text" placeholder="Description(optional)" name="description"/>


            <input type="submit" value="Ready To Go"/>
        </form>

    </div>
</main>

<style>
    body {
        background: #282828; /* match border color */
        font-size: 20px;
    }

    .playlist {
        padding-left: 30px;
    }

    h1 {
        margin-top: 30px;
        margin-bottom: 25px;
        font: 44px 'Arial Narrow', sans-serif;
        color: #dc006c;
    }

    input[type=submit] {
        display: block;
        margin: 25px 0;
        padding: 15px 36px;
        background: transparent;
        cursor: pointer;
        border: 2px solid #dc006c;
        border-radius: 5px;
        color: #fefefe;

    }

    input[type=submit]:hover {
        border: 2px solid #dc006c;
        border-radius: 5px;
        color: #dc006c;
    }

    label {
        color: #fefefe;
    }

    input[type=text], select {
        height: 30px;
        width: 300px;
        border: 1px solid #dc006c;
        margin-top: 5px;
        display: inline-block;
    }

    @media only screen and (max-width: 767px) {  /* this part is for mobile responsive element*/
        body {
            margin-top: 0;
            margin-left: 0;
            font-size: 80%;
        }

        h1 {
            padding-top: 0;
            font-size: 30px;
        }

        .playlist {
            padding-top: 0;
            margin-top: 0;
            padding-left: 10%;
        }

        input[type=submit] {
            width: 90%;
        }

        input[type=text] {
            width: 90%;
        }
    }


</style>

<footer>

</footer>

</body>
</html>
