<!-- views/playlist.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <title>view playlist</title>
</head>
<body>

<main>


    <div class='playlist' style="padding-left: 30px;">
        <h1>Hi <%= username%>, select one of your favorite playlist!</h1>

        <form action="/get_tracks" method="POST">
            <% playlist.forEach(function(list) { %>
            <input type="radio" checked="checked" value=<%= list.name %> name="list"> <label><%= list.name %></label> <br><br>
            <% }); %>

            <input type="text" placeholder="New name for playlist(optional)" name="title"/><br>
            <input type="text" placeholder="Description(optional)" name="description"/>


            <input type="submit" value="Ready To Go"/>
        </form>

    </div>
</main>

<style>
    body{
        background: linear-gradient(-90deg, powderblue, lightyellow);
    }

    h1{
        margin-top: 30px;
        margin-bottom: 25px;
        font-weight: 400;
        font-size: 300%;
        color: darkolivegreen;
    }
    input[type=submit] {
        display: block;
        margin: 15px 0;
        padding:15px 36px;
        color:cadetblue;
        background:transparent;
        border: 2px solid darkseagreen;
        cursor: pointer;
        -webkit-border-radius: 5px;
        border-radius: 5px;
    }

    input[type=submit]:hover {
        transform: scale(1.2);
        color: olive;
        font-size: 100%;
    }

    label {
        color: darkolivegreen;
    }

    label:hover {
        font-size: 120%;
        color:blueviolet;
    }

    input[type=text], select {
        height: 30px;
        width: 300px;
        border: 1px solid darkolivegreen;
        margin-top: 5px;
        display: inline-block;
    }


</style>

<footer>

</footer>

</body>
</html>
